{
  "env": {
    "browser": true,
    "es2021": true,
    "commonjs": true,
    "node": true,
    "mocha": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:@typescript-eslint/recommended" // Extend TypeScript recommended rules
  ],
  "parser": "@typescript-eslint/parser", // Use the TypeScript parser
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true // Enable JSX parsing if using React
    }
  },
  "plugins": ["react", "@typescript-eslint"], // Add TypeScript plugin
  "rules": {
    "semi": [2, "always"],
    "react/prop-types": "off",
    "no-prototype-builtins": "off",
    "react/jsx-key": "off",
    "@typescript-eslint/no-unused-vars": ["warn"], // Example TypeScript rule
    "@typescript-eslint/no-explicit-any": "off" // Adjust rules as needed
  }
}
